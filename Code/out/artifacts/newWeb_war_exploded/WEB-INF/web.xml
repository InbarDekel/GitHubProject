<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
</servlet>
    <servlet>
        <servlet-name>UserRepServlet</servlet-name>
        <servlet-class>servlets.UserRepServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>servlets.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExitRepServlet</servlet-name>
        <servlet-class>servlets.ExitRepServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExitAllRepServlet</servlet-name>
        <servlet-class>servlets.ExitAllRepServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RepListServlet</servlet-name>
        <servlet-class>servlets.RepListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForkRepServlet</servlet-name>
        <servlet-class>servlets.ForkRepServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserNameServlet</servlet-name>
        <servlet-class>servlets.UserNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CurRepListServlet</servlet-name>
        <servlet-class>servlets.CurRepListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenRepServlet</servlet-name>
        <servlet-class>servlets.OpenRepServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionServlet</servlet-name>
        <servlet-class>servlets.ActionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificationsListServlet</servlet-name>
        <servlet-class>servlets.NotificationsListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>servlets.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendChatServlet</servlet-name>
        <servlet-class>servlets.SendChatServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenRepServlet</servlet-name>
        <url-pattern>/openRep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Pages/sign/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/usersList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/uploadFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExitRepServlet</servlet-name>
        <url-pattern>/exitFromRep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RepListServlet</servlet-name>
        <url-pattern>/RepsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForkRepServlet</servlet-name>
        <url-pattern>/forkRep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserNameServlet</servlet-name>
        <url-pattern>/userName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExitAllRepServlet</servlet-name>
        <url-pattern>/exitFromAllRep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurRepListServlet</servlet-name>
        <url-pattern>/CurRepsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRepServlet</servlet-name>
        <url-pattern>/userRep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionServlet</servlet-name>
        <url-pattern>/RepDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificationsListServlet</servlet-name>
        <url-pattern>/notifications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>SendChatServlet</servlet-name>
    <url-pattern>/chatSubmit</url-pattern>
</servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            utils.ContextListener
        </listener-class>
    </listener>
</web-app>
